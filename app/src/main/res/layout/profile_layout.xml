<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            style="@style/ProfileViewSection.Container">

            <LinearLayout
                style="@style/ProfileViewSection.Data">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_text"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            style="@style/AppTheme.TextView" />

                        <TextView
                            android:id="@+id/age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sample_text"
                            android:layout_marginLeft="15sp"
                            style="@style/AppTheme.TextView"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_text"
                        android:textColor="@color/colorSecondaryText"/>

                </LinearLayout>

                <lt.dualpair.android.ui.SquareImageView
                    android:id="@+id/main_picture"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/ProfileViewSection.Container">

            <LinearLayout
                android:id="@+id/sociotypes_header"
                style="@style/ProfileViewSection.Header">

                <ImageView
                    android:id="@+id/edit_sociotypes"
                    style="@style/ProfileViewSection.HeaderEditIcon"/>

                <TextView
                    android:text="@string/sociotype"
                    style="@style/ProfileViewSection.HeaderText"/>

            </LinearLayout>

            <View
                style="@style/ProfileViewSection.Divider"/>

            <RelativeLayout
                style="@style/ProfileViewSection.Data">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/first_sociotype_info"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/info"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"
                        android:tint="@color/colorSecondaryText"/>

                    <TextView
                        android:id="@+id/first_sociotype_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_text"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10sp"
                        style="@style/AppTheme.TextView"/>

                    <TextView
                        android:id="@+id/first_sociotype_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_text"
                        style="@style/AppTheme.TextView"/>

                </LinearLayout>

            </RelativeLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e7e7e7"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:src="@drawable/info"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10sp"/>

                <TextView
                    android:id="@+id/second_sociotype_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_text"
                    android:textSize="20sp"
                    android:layout_marginRight="10sp"/>

                <TextView
                    android:id="@+id/second_sociotype_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_text"/>

            </LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photos_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/ProfileViewSection.Container">

            <LinearLayout
                style="@style/ProfileViewSection.Header"
                >

                <ImageView
                    android:id="@+id/edit_photos"
                    style="@style/ProfileViewSection.HeaderEditIcon"/>

                <TextView
                    android:text="@string/photos"
                    style="@style/ProfileViewSection.HeaderText"/>

            </LinearLayout>

            <View
                style="@style/ProfileViewSection.Divider"/>

            <LinearLayout
                style="@style/ProfileViewSection.Data"
                android:paddingLeft="0dp"
                android:paddingRight="0dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/ProfileViewSection.Container">

            <LinearLayout
                android:id="@+id/accounts_header"
                style="@style/ProfileViewSection.Header">

                <ImageView
                    android:id="@+id/edit_accounts"
                    style="@style/ProfileViewSection.HeaderEditIcon"/>

                <TextView
                    android:text="@string/accounts_and_communication"
                    style="@style/ProfileViewSection.HeaderText"/>

            </LinearLayout>

            <View style="@style/ProfileViewSection.Divider"/>

            <LinearLayout
                style="@style/ProfileViewSection.Data">

                <GridView
                    android:id="@+id/accounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="6"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="1dp"
                    android:horizontalSpacing="10dp"
                    tools:listitem="@layout/account_grid_item"
                    android:scrollbars="none"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>