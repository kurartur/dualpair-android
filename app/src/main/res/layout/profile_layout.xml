<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:padding="5sp">

        <LinearLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@drawable/profile_section_background">

            <lt.dualpair.android.ui.SquareImageView
                android:id="@+id/main_picture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="2dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5sp"
                android:paddingRight="5sp"
                android:paddingBottom="5sp"
                android:paddingLeft="15sp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_text"
                        android:textSize="17sp"/>

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_text"
                        android:layout_marginLeft="15sp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:background="@drawable/profile_section_background"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingLeft="25sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sociotype"
                    android:layout_alignParentLeft="true"
                    android:textColor="#dcdcdc"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_sociotypes"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/edit_sociotypes"
                    android:layout_alignParentStart="true">

                    <ImageView
                        android:id="@+id/first_sociotype_info"
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/info"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10sp"/>

                    <TextView
                        android:id="@+id/first_sociotype_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_text"
                        android:textSize="20sp"
                        android:layout_marginRight="10sp"/>

                    <TextView
                        android:id="@+id/first_sociotype_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sample_text"/>

                </LinearLayout>

            </RelativeLayout>

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e7e7e7"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:src="@drawable/info"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10sp"/>

                <TextView
                    android:id="@+id/second_sociotype_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_text"
                    android:textSize="20sp"
                    android:layout_marginRight="10sp"/>

                <TextView
                    android:id="@+id/second_sociotype_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_text"/>

            </LinearLayout>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:background="@drawable/profile_section_background"
            android:paddingTop="5sp"
            android:paddingBottom="15sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingLeft="25sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photos"
                    android:layout_alignParentLeft="true"
                    android:textColor="#dcdcdc"/>

                <ImageView
                    android:id="@+id/edit_photos"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10sp"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:background="@drawable/profile_section_background"
            android:paddingLeft="15sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:paddingBottom="15sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:paddingLeft="25sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accounts_and_communication"
                    android:layout_alignParentLeft="true"
                    android:textColor="#dcdcdc"/>

                <ImageView
                    android:id="@+id/edit_accounts"
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/edit"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10sp"/>

            </RelativeLayout>

            <GridView
                android:id="@+id/accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="6"
                android:stretchMode="columnWidth"
                android:verticalSpacing="1dp"
                android:horizontalSpacing="10dp"
                tools:listitem="@layout/account_grid_item"
                android:scrollbars="none"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>