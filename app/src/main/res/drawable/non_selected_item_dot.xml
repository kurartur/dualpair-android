<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="oval" android:useLevel="true"
        android:dither="true">
        <size android:height="4dip" android:width="4dip"/>
        <solid android:color="@color/shadowColor"/>
    </shape>
</item>

<item android:bottom="2px" android:right="2px">
    <shape android:shape="oval" android:useLevel="true"
        android:dither="true">
        <size android:height="4dip" android:width="4dip"/>
        <solid android:color="#ffffff"/>
    </shape>
</item>
</layer-list>